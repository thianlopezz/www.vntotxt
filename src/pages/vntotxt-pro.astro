<script
  is:inline
  src="https://www.paypal.com/sdk/js?client-id=AWv1dYyq_AlE6G7h2JcYVpFuaQvSgXyIGQtPlGCP-PWGdfAYFo0gNutAtODkjRxQsRDXzB7u5sHp2QPg&vault=true&intent=subscription"
></script>
<script is:inline>
  window.onload = function () {
    // Render the PayPal button into #paypal-button-container
    paypal
      .Buttons({
        createSubscription: function (data, actions) {
          return actions.subscription.create({
            plan_id: "P-3D548772MF324970XMYOLQDA", // Creates the subscription
          });
        },
        onApprove: function (data, actions) {
          debugger;
          alert("You have successfully subscribed to " + data.subscriptionID); // Optional message given to subscriber
        },
      })
      .render("#paypal-button-container"); // Renders the PayPal button
  };
</script>
